@using FinancePlanning.Infrastructure.Interfaces
@model IEnumerable<FinancePlanning.Domain.Entities.SavedSimpleInterest>
@inject ICurrencyFormatter CurrencyFormatter

@{
    ViewData["Title"] = "Saved Simple Interest Calculations";
}

<div class="container mt-4">
    <h2 class="mb-4">Saved Simple Interest Calculations</h2>

    @if (TempData["Success"] is string successMessage)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <a asp-action="Index" class="btn btn-outline-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Back to Calculator
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You have no saved calculations yet.</div>
    }
    else
    {
        <form asp-action="DeleteAllCalculations" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete ALL saved calculations?');">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger mb-3">
                <i class="bi bi-trash-fill"></i> Delete All
            </button>
        </form>

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Principal</th>
                    <th>Interest Rate (%)</th>
                    <th>Duration</th>
                    <th>Frequency</th>
                    <th>Interest</th>
                    <th>Total</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@CurrencyFormatter.Format(item.Principal, item.SelectedCurrency)</td>
                        <td>@item.InterestRate</td>
                        <td>@item.Duration @item.Unit</td>
                        <td>@item.Frequency</td>
                        <td>@CurrencyFormatter.Format(item.CalculatedInterest, item.SelectedCurrency)</td>
                        <td>@CurrencyFormatter.Format(item.TotalAmount, item.SelectedCurrency)</td>
                        <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <form asp-action="LoadCalculation" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="bi bi-box-arrow-in-down"></i> Load
                                </button>
                            </form>

                            <form asp-action="DeleteCalculation" method="post" class="d-inline ms-2" onsubmit="return confirm('Are you sure you want to delete this calculation?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
