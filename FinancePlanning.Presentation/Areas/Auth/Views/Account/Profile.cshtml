@model FinancePlanning.Presentation.Areas.Auth.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Your Profile";
}

<h2>Your Profile</h2>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success">@ViewData["Message"]</div>
}

<form asp-action="Profile" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BirthDate" class="form-label"></label>
        <input asp-for="BirthDate" class="form-control" type="date" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DefaultTargetRetirementAge" class="form-label"></label>
        <input asp-for="DefaultTargetRetirementAge" class="form-control" type="number" min="1" />
        <span asp-validation-for="DefaultTargetRetirementAge" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DefaultRiskProfile" class="form-label"></label>
        <select asp-for="DefaultRiskProfile" class="form-select"
                asp-items="Html.GetEnumSelectList<FinancePlanning.Domain.Enums.RiskProfile>()">
            <option value="">-- Select --</option>
        </select>
        <span asp-validation-for="DefaultRiskProfile" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PreferredCurrency" class="form-label"></label>
        <select asp-for="PreferredCurrency" class="form-select">
            <option value="">-- Select currency --</option>
            <option value="CZK">CZK</option>
            <option value="EUR">EUR</option>
            <option value="USD">USD</option>
        </select>
        <span asp-validation-for="PreferredCurrency" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
